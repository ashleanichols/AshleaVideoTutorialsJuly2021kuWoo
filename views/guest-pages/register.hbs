<main>
    <form method="POST" action="/register" class="text-center border border-light p-5">
        <div class="form-group">
            <label for="username">Username</label>
            <input name="username" type="text" class="form-control" placeholder="Username" value={{username}}>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input name="password" type="password" class="form-control" placeholder="Password" value={{password}}>
        </div>

        <div class="form-group">
            <label for="repeatPassword">Repeat Password</label>
            <input name="rePassword" type="password" class="form-control" placeholder="Password" value={{rePassword}}>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</main>